@model List<Account.Models.ViewModels>



@Html.Partial("_Account")
<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>類別</th>
        <th>日期</th>
        <th>金額</th>
    </tr>

    @{
        int i = 1;
        foreach (var Data in Model)
        {

        <tr>

            <td>@(i++)</td>

            <td>@Data.Type</td>

            <td>@Data.DateTime.ToString("yyyy/MM/dd")</td>
                
            <td>@Data.Money.ToString("N0")</td>
              
        </tr>
        }
    }

</table>
